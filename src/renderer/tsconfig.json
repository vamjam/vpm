{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "paths": {
      "~/*": ["./*"],
      "@shared/*": ["../shared/*"],
      "@main/*": ["../main/*"]
    }
  },
  "references": [
    {
      "path": "../shared"
    },
    {
      "path": "../main"
    }
  ],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
