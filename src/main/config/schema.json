{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Config Schema",
  "type": "object",
  "required": [
    "app.env",
    "app.version",
    "log.level",
    "data.path",
    "window.height",
    "window.width",
    "window.x",
    "window.y"
  ],
  "additionalProperties": false,
  "definitions": {
    "position": {
      "type": "string",
      "enum": ["center", "start", "end"]
    }
  },
  "properties": {
    "vam.path": {
      "title": "VaM installation folder",
      "type": "string",
      "description": "Path to the VaM installation folder."
    },
    "app.env": {
      "title": "Application environment",
      "oneOf": [
        {
          "enum": ["production", "development", "test"]
        }
      ],
      "default": "production",
      "readOnly": true,
      "description": "Application environment."
    },
    "app.version": {
      "title": "Application version",
      "type": "string",
      "default": "0.1.0",
      "readOnly": true,
      "description": "Current application version."
    },
    "log.level": {
      "title": "Log level",
      "oneOf": [
        {
          "enum": [0, 1, 2, 3]
        }
      ],
      "default": 1,
      "description": "Logging detail level. Changes take effect on next start."
    },
    "data.path": {
      "title": "Application storage path",
      "type": "string",
      "description": "Path where application data is stored."
    },
    "window.height": {
      "title": "Window height",
      "type": "number",
      "default": 800,
      "description": "Window height in pixels.",
      "readOnly": true
    },
    "window.width": {
      "title": "Window width",
      "type": "number",
      "default": 1200,
      "description": "Window width in pixels.",
      "readOnly": true
    },
    "window.x": {
      "title": "Window x position",
      "default": "center",
      "readOnly": true,
      "oneOf": [
        {
          "$ref": "#/definitions/position"
        },
        {
          "type": "number"
        }
      ],
      "description": "Window x-position on screen."
    },
    "window.y": {
      "title": "Window y position",
      "default": "center",
      "readOnly": true,
      "oneOf": [
        {
          "$ref": "#/definitions/position"
        },
        {
          "type": "number"
        }
      ],
      "description": "Window y-position on screen."
    }
  }
}
