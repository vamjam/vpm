datasource db {
  provider = "sqlite"
  url      = "file:./vpm.db"
}

generator client {
  provider = "prisma-client-js"
}

model VarPackage {
  id Int @id @default(autoincrement())

  name          String
  url           String    @unique
  size          Int?
  type          String?
  version       Int?
  fileCreatedAt DateTime?
  fileUpdatedAt DateTime?

  description  String?
  instructions String?
  credits      String?
  licenseType  String?

  creator   Creator @relation(fields: [creatorId], references: [id])
  creatorId Int

  images Image[]
  tags   Tag[]

  dependencies VarPackage[] @relation("deps")
  dependants   VarPackage[] @relation("deps")
  hub          HubPackage?

  @@unique([name, creatorId, version])
}

model HubPackage {
  id         Int       @id @default(autoincrement())
  releasedAt DateTime?
  createdAt  DateTime?
  updatedAt  DateTime?

  // The resourceId is what the Hub uses to identify a package
  resourceId   Int  @unique
  packageId    Int?
  attachmentId Int?

  type String?

  category         String?
  parentCategoryId Int?

  hubHosted       Boolean?
  hubDownloadable Boolean?
  hubURL          String?

  rating        Int?
  viewCount     Int?
  downloadCount Int?
  ratingCount   Int?

  varPackage   VarPackage @relation(fields: [varPackageId], references: [id])
  varPackageId Int        @unique
}

model Tag {
  id   Int          @id @default(autoincrement())
  name String       @unique
  var  VarPackage[]
}

model Image {
  id   Int          @id @default(autoincrement())
  url  String       @unique
  type String
  sort Int          @default(0)
  vars VarPackage[]
}

model Creator {
  id     Int          @id @default(autoincrement())
  name   String       @unique
  avatar String?
  vars   VarPackage[]
}
