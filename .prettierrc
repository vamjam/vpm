{
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "bracketSameLine": true,
  "importOrder": [
    "^node:(.*)$",
    "<THIRD_PARTY_MODULES>",
    "@main/(.*)$",
    "@shared/(.*)$",
    "^~/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderSideEffects": false,
  "importOrderParserPlugins": [
    "typescript",
    "jsx",
    "topLevelAwait",
    "importAssertions",
    "explicitResourceManagement",
    "decorators"
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
