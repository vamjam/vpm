{
  "compilerOptions": {
    "rootDir": ".",

    "target": "esnext",
    "module": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "jsx": "preserve",
    "newLine": "lf",
    "noErrorTruncation": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true
  },
  "exclude": ["node_modules", "dist"]
}
