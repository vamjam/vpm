datasource db {
  provider = "sqlite"
  url      = "file:./vpm.db"
}

generator client {
  provider = "prisma-client-js"
}

model VarPackage {
  id          String   @id
  name        String   @unique
  createdAt   DateTime
  updatedAt   DateTime
  images      Image[]  @relation(name: "VarPackageImages")
  mainImage   Image    @relation(name: "VarPackageMainImage", fields: [mainImageId], references: [id])
  mainImageId String   @unique
  description String
  creator     Creator  @relation(fields: [creatorId], references: [id])
  creatorId   String
  Image       Image[]
}

model Image {
  id           String       @id
  path         String
  VarPackage   VarPackage?  @relation(fields: [varPackageId], references: [id])
  varPackageId String?
  VarPackage   VarPackage?  @relation(fields: [varPackageId], references: [id])
  VarPackage   VarPackage[]
}

model Creator {
  id         String       @id
  name       String
  VarPackage VarPackage[]
}
