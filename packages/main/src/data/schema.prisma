datasource db {
  provider = "sqlite"
  url      = "file:./vpm.db"
}

generator client {
  provider = "prisma-client-js"
}

model VarPackage {
  id           String        @id
  createdAt    DateTime
  name         String
  version      Int
  creator      Creator       @relation(fields: [creatorId], references: [id])
  creatorId    String
  path         String
  images       Image[]
  description  String?
  contentTypes ContentType[]
}

model ContentType {
  id            Int        @id @default(autoincrement())
  varPackage    VarPackage @relation(fields: [varPackageId], references: [id])
  varPackageId  String
  contentTypeId Int
}

model Image {
  id           String     @id
  path         String     @unique
  sort         Int        @default(0)
  varPackage   VarPackage @relation(fields: [varPackageId], references: [id])
  varPackageId String
}

model Creator {
  id         String       @id
  name       String       @unique
  varPackage VarPackage[]
}
